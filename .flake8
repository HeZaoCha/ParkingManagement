[flake8]
max-line-length = 100
extend-ignore = E203, W503, E501
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    build,
    dist,
    *.egg-info,
    migrations,
    staticfiles,
    media,
    logs
per-file-ignores =
    __init__.py:F401
    migrations/*:E501
    tests/*:E501

